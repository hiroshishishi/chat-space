.side-bar
  .bar-header
    .header-items
      %p.header-items__name
        = current_user.name
      %ul.header-items__icon
        %li.list
        = link_to new_group_path, class: "icon__btn" do
          = icon('fas', 'edit')
        %li.list
        = link_to edit_user_path(current_user), class: "icon__btn" do
          = icon('fas', 'cog')

  .group-lists
    - current_user.groups.each do |group|
      .list
        = link_to '#' do
          .group__name
            = group.name
          .group__message
